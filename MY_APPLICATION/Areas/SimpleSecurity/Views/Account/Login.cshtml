@model ViewModels.Account.LoginViewModel
@{
    string titleString = Resources.PageTitle.Login;
    ViewBag.Title = titleString;
}

@Html.DtxHeader(titleString)
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="form-group">
        @Html.DtxValidationSummary()

        @Html.DtxLabelAndEditorFor(model => model.Username)

        @Html.DtxLabelAndEditorFor(model => model.Password)

        @*@Html.DtxCaptcha(labelColumn: labelColumn)*@

        @Html.DtxSubmitButton(submitButtonCaption: Resources.Buttons.Login)
    </div>
    @Html.DtxHorizontalLine()
}
